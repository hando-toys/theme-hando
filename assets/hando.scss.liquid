/*============================================================================
  #Site Header
==============================================================================*/
.header {
    background-color: violet;
    display: block;
    height: $height--header;
    padding: ($gutter / 2) 0;
    position: relative;
    width: $full;

    .header__menu {
        background-color: green;
        height: $base*2;
        width: 25%;
    }
    .header__logo {
        background-color: violet;
    }
}